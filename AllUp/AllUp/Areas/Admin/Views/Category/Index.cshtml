@model List<Category>
<div class="row clearfix">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="padding:20px">
                <div style="display:flex;justify-content:space-between;margin-bottom:20px">
                    <h4 class="card-title">Categories</h4>
                    <a class="btn btn-primary text-white mx-2 btn-rounded" asp-action="Create">Create</a>
                </div>
                <div class="table-responsive pt-3">
                    <table id="mySliders" class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Image
                                </th>

                                <th>
                                    Name
                                </th>

                                <th>
                                    Main or Child
                                </th>

                                <th>
                                    Parent
                                </th>

                                <th>
                                    Children
                                </th>

                                <th class="text-right">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category item in Model)
                            {
                                <tr>

                                    <td>
                                        <img style="width:120px;height:120px;object-fit:cover" src="~/assets/images/@item.Image">
                                    </td>

                                    <td>
                                        @item.Name
                                    </td>

                                    <td>
                                        @if(item.IsMain){
                                            <div>Main</div>
                                        }
                                        else{
                                                <div>Child</div>
                                            }
                                    </td>

                                     <td>
                                        @if (!item.IsMain){

                                            <div>@item.Parent.Name</div>
                                        }
                                    </td>

                                    <td>
                                        @if (item.IsMain)
                                        {
                                            foreach (Category child in item.Children)
                                            {

                                                <div>@child.Name</div>
                                            }
                                        }
                                        
                                    </td>



                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning text-white mx-2 btn-rounded">Detail</a>
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success text-white mx-2 btn-rounded">Update</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white mx-2 btn-rounded">Delete</a>
                                        </div>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
